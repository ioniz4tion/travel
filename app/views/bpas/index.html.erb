<h1>Listing bpas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bpas.each do |bpa| %>
      <tr>
        <td><%= link_to 'Show', bpa %></td>
        <td><%= link_to 'Edit', edit_bpa_path(bpa) %></td>
        <td><%= link_to 'Destroy', bpa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

