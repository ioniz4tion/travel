<meta name="description" content="Take a short quiz on your ideal vacation and we'll recommend the best destination for you!">

<title>Travel Planner - 

<%= render :partial => 'templates/head' %>

<div class="content">

	<h1><span>Our</span> Suggestion</h1>

	<%= form_tag('/planner/hotel', id: "suggest") do %>
		<!-- <div class="recommend">
			<span class="recommend-span">We recommend a vacation to:</span>
		</div> -->

		<ul>

	    <li class="item">
	      <div>

	        <div class="price-img">
	          <%= image_tag(@packages.first.image.url) %>
	        </div>

	        <div class="description">
	          <h2><%= @packages.first.name %></h2>
	          <p><%= @packages.first.gen_package_paragraphs.first.text %></p>
	        </div>

	      </div>
	    </li>

	  </ul>

		<input type="text" name="city_id" id="city_id" style="display:none" value="<%= @packages.first.id %>">


		<div class="controls">
			<button id="another" class="plnr-btn" type="button">Pick Another</button>
			<div class="spacer"></div>
			<button id="suggest-continue" class="plnr-btn continue" type="button"><span class="planner-arrow arrow-right"></span><span class="planner-arrow arrow2 arrow-right"></span></button>
		</div>

	<% end %>

	<div id="cities">

		<div class="down">
			<div id="arrows">
			</div>		
		</div>

		<div class="content">

		  <h1>Pick a city</h1>

		  <ul>

		  <% i = 1 %>
		    <% @packages.each do |package| %>


		      <li class="item">
		        <div class="pick-content">
		          
		          <div class="price-img">
		            <%= image_tag(package.image.url) %>	            
		          </div>

		          <div class="description">
		            <h2><%= i.ordinalize %> - <%= package.name %></h2>
		            <p><%= package.gen_package_paragraphs.first.text %></p>     
		          </div>

		          <button id="choose<%= package.id %>" class="choose btn btn-1 btn-1b" type="button">Choose</button>

		          

		        </div>

		        <div>	                    

		          <button id="show<%= package.id %>">Show/hide map<span class="caret"></span></button>

		        </div>

		        <div class="map" id="<%= package.id %>">	        

		          <iframe src="<%= package.iframe_url %>"></iframe>

		        </div>

		      </li>

		    <hr>
		    <% i += 1 %>
		    <% end %>	    

		  </ul>

		</div>
	</div>

</div>