<%= render :partial => 'templates/tiles' %>

<%= render :partial => 'templates/slideshow' %>

<%= render :partial => 'templates/flipper' %>

<div class="content">

	<h1><%= @city.name %> Hotels</h1>

	<% @city.gen_hotels.each do |hotel| %>

		<div>

			<h2><%= hotel.name %></h2>

			<div class="img">
				<%= image_tag(image.link) %>
			</div>

			<div class="text">
				<p><%= hotel.description %></p>
				<p>Pricing: <%= hotel.pricing %></p>
				<p>Address: <%= hotel.address %></p>
			</div>

		</div>

	<% end %>

</div>