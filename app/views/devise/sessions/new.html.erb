<div class="content">

  <h1>Log <span>in</span></h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <table class="login-form">

      <tr>
        <th><span>Email</span></td>
        <td><%= f.email_field :email, autofocus: true %></td>
      </tr>

      <tr>
        <th><span>Password</span></td>
        <td><%= f.password_field :password, autocomplete: "off" %></td>
      </tr>

      <tr>
        <td colspan="2">
          <% if devise_mapping.rememberable? -%>
            <!-- <span id="remember">Remember Me</span> -->
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me do %>
              <span class="eleganticon"></span>Remember Me
            <% end %>
          <% end -%>
        </td>
      </tr>

      <tr>
        <td colspan="2"><%= f.submit "Log in", id: "login" %></td>
      </tr>

    </table>

  <% end %>

  <%= render "devise/shared/links" %>

</div>