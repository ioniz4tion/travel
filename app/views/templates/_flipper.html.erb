<div class="flipper-container">

	<div class="flipper">
	
		<%= render :partial => 'templates/logo' %>
		<%= render :partial => 'templates/weather' %>

		<div class="back weather-more">

			<button id="flipperClose"><span class="glyphicon glyphicon-remove"></span></button>

			<span>5-Day Forecast</span>

			<% if @weather.is_a? Array %>

				<div class="weather-back-slide">
					<ul class="weather-back-bxslider">

						<% @weather.each do |city_weather| %>

							<li>

								<p class="weather-city"><%= city_weather.doc["location"]["city"] %></p>

								<div>

									<div class="forecast">
										<span><%= city_weather.forecasts[0].day %>, <%= city_weather.forecasts[0].date %></span>

										<div class="hi-lo">
											<span class="temp-high"><%= city_weather.forecasts[0].high %>&deg; F</span>
											<span class="slash">/</span>
											<span class="temp-low"><%= city_weather.forecasts[0].low %>&deg; F</span>
										</div>

										<div class="weather-graphic">
											<div>
												<% text = city_weather.forecasts[0].text %>
												<%= pick_weather(text) %>
												<span><%= city_weather.forecasts[0].text %></span>
											</div>
										</div>

									</div>

									<hr>

									<div class="forecast">
										<span><%= city_weather.forecasts[1].day %>, <%= city_weather.forecasts[1].date %></span>

										<div class="hi-lo">
											<span class="temp-high"><%= city_weather.forecasts[1].high %>&deg; F</span>
											<span class="slash">/</span>
											<span class="temp-low"><%= city_weather.forecasts[1].low %>&deg; F</span>
										</div>

										<div class="weather-graphic">
											<div>
												<% text = city_weather.forecasts[1].text %>
