<%= render :partial => 'templates/tiles' %>

<%= render :partial => 'templates/slideshow' %>

<%= render :partial => 'templates/flipper' %>

<div class="content">

  <h1>Things to do <span>in <%= @city.name %></span></h1>

  <ul>

    <% @city.gen_attractions.each do |attraction| %>

      <li class="item">
        <div>

          <div class="price-img">
            <%= image_tag(attraction.link) %>
            <div></div>
            <p><%= best_in_place attraction, :pricing, path: 'gen_attractions/' + attraction.id.to_s %></p>
          </div>

          <div class="description">
            <h2><%= best_in_place attraction, :name, path: 'gen_attractions/' + attraction.id.to_s %></h2>
            <p><%= best_in_place attraction, :description, type: :textarea, path: 'gen_attractions/' + attraction.id.to_s %></p>
            <div class="rating">
              <span class="glyphicon glyphicon-star-empty"></span>
              <div>
                <p><%= best_in_place attraction, :rating, path: 'gen_attractions/' + attraction.id.to_s %><span>/</span>5</p>
              </div>
            </div>
          </div>

        </div>

        <div>

          <table>

            <tr>

              <td>
                <span class="glyphicon glyphicon-map-marker"></span>
                <div>
                  <p><%= best_in_place attraction, :location, path: 'gen_attractions/' + attraction.id.to_s %></p>
                </div>
              </td>

              <td>
                <span class="glyphicon glyphicon-globe"></span>
                <div>
                  <a href="<%= attraction.website_url %>" target="_blank"><%= best_in_place attraction, :website, path: 'gen_attractions/' + attraction.id.to_s %></a>
                </div>
              </td>

            </tr>

            <tr>

              <td>
                <span class="glyphicon glyphicon-time"></span>
                <div>
                  <p><%= best_in_place attraction, :hours, path: 'gen_attractions/' + attraction.id.to_s %></p>
                </div>
              </td>

              <td>
                <span class="glyphicon glyphicon-earphone"></span>
                <div>
                  <p><%= best_in_place attraction, :phone, path: 'gen_attractions/' + attraction.id.to_s %></p>
                </div>
              </td>

            </tr>

          </table>

          <%= link_to 'Delete', 'gen_attractions/' + attraction.id.to_s, method: :delete, data: { confirm: 'Are you sure?' } %>

          <button id="show<%= attraction.iframe_id %>">Show/hide map<span class="caret"></span></button>

        </div>

        <div class="map" id="<%= attraction.iframe_id %>">

          <iframe src="<%= attraction.iframe_url %>"></iframe>

        </div>

      </li>

    <% end %>

    <%= link_to 'New Attraction', gen_attractions_path, method: :create %>

</div>