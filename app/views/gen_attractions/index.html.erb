<%= render :partial => 'templates/tiles' %>

<%= render :partial => 'templates/slideshow' %>

<%= render :partial => 'templates/flipper' %>

<div class="content">

  <h1>Things to do <span>in <%= @city.name %></span></h1>

  <ul>

    <% @city.gen_attractions.each do |attraction| %>

      <li class="item">
        <div>

          <div class="price-img">
            <%= image_tag(attraction.link) %>
            <div></div>
            <p><%= attraction.pricing %></p>
          </div>

          <div class="description">
            <h2><%= attraction.name %></h2>
            <p><%= attraction.description %></p>
            <div class="rating">
              <span class="glyphicon glyphicon-star-empty"></span>
              <div>
                <p><%= attraction.rating %><span>/</span>5</p>
              </div>
            </div>
          </div>

        </div>

        <div>

          <table>

            <tr>

              <td>
                <span class="glyphicon glyphicon-map-marker"></span>
                <div>
                  <p><%= attraction.location %></p>
                </div>
              </td>

              <td>
                <span class="glyphicon glyphicon-globe"></span>
                <div>
                  <a href="<%= attraction.website_url %>" target="_blank"><%= attraction.website %></a>
                </div>
              </td>

            </tr>

            <tr>

              <td>
                <span class="glyphicon glyphicon-time"></span>
                <div>
                  <p><%= attraction.hours %></p>
                </div>
              </td>

              <td>
                <span class="glyphicon glyphicon-earphone"></span>
                <div>
                  <p><%= attraction.phone %></p>
                </div>
              </td>

            </tr>

          </table>

          <button id="show<%= attraction.iframe_id %>">Show/hide map<span class="caret"></span></button>

        </div>

        <div class="map" id="<%= attraction.iframe_id %>">

          <iframe src="<%= attraction.iframe_url %>"></iframe>

        </div>

      </li>

    <% end %>

</div>